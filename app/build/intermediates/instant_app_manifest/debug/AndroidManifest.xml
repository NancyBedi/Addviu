<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.addviu"
    android:targetSandboxVersion="2"
    android:versionCode="6"
    android:versionName="1.05" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.app.addviu.AppController"
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity android:name="com.app.addviu.view.activity.FilterActivity" />
        <activity android:name="com.app.addviu.view.activity.SearchActivity" />
        <activity
            android:name="com.app.addviu.view.activity.ProfilePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.MyVideos"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.SideMenuVid"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.Playlistpage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.AddVideoPlaylist"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.ChannelPage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.CreateChannelScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.MyChannels"
            android:windowSoftInputMode="adjustPan" /> <!-- <activity android:name=".view.activity.CommentsScreen" /> -->
        <activity
            android:name="com.app.addviu.view.activity.VideoPlayerScreen"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name="com.app.addviu.view.activity.VideoUploadScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.ForgotScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.SignInScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.SignUpScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.addviu.view.activity.HomeScreen"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name="com.app.addviu.view.activity.RewardsScreen"
            android:screenOrientation="portrait" />
        <activity android:name="com.app.addviu.view.activity.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_provider_authority"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="com.app.addviu.data.helper.LocalStorageProvider"
            android:authorities="com.app.addviu.localstorage.documents"
            android:enabled="@bool/use_provider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS" >
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION"
            android:visibleToInstantApps="true" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>