<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu" tools:targetApi="lollipop">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:popupElevation" tools:targetApi="lollipop">4dp</item>
    </style>

<!--    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">-->
<!--        <item name="android:popupBackground">@android:color/white</item>-->
<!--    </style>-->


    <style name="theme_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="circularProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="text_view_14_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="text_view_12_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="text_input_style" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_style_bg</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="themeInputLayout" >
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>

<!--    <style name="ExoMediaButton.FastForward">-->
<!--        <item name="android:visibility">gone</item>-->
<!--    </style>-->

<!--    <style name="ExoMediaButton.Rewind">-->
<!--        <item name="android:visibility">gone</item>-->
<!--    </style>-->

    <style name="BottomNavigationViewText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="BottomNavigationView.ActiveText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:layout_marginTop">0dp</item>

    </style>

    <style name="alertDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
