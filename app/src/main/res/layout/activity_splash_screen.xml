<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context=".view.activity.SplashScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@id/iconFLay">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="@dimen/margin_20"
            app:srcCompat="@drawable/ic_logo" />

    </LinearLayout>

    <TextView
        style="@style/text_view_14_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Beta Version"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/iconFLay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/iconFLay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/flag"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            app:srcCompat="@drawable/flag" />

        <TextView
            android:id="@+id/textInd"
            style="@style/text_view_14_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proudly Indian"
            android:textSize="@dimen/text_16"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>