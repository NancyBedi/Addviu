<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_20">

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_14_style"
        android:textSize="@dimen/text_18"
        android:text="About"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/botLine"
        android:layout_width="@dimen/margin_200"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbout"
        android:background="@color/purpule"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_14_style"
        android:text="@string/channel_desc"
        app:layout_constraintTop_toBottomOf="@+id/botLine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_20"/>
</androidx.constraintlayout.widget.ConstraintLayout>