<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_150"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dummy_bnr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/editBanner"
        android:layout_width="@dimen/margin_35"
        android:layout_height="@dimen/margin_35"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@drawable/black_trans_circle"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/channelImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerImage"
        app:srcCompat="@drawable/circle_user"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="@dimen/margin_35"
        android:layout_height="@dimen/margin_35"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/black_trans_circle"
        android:padding="@dimen/margin_5"
        app:layout_constraintBottom_toBottomOf="@+id/channelImg"
        app:layout_constraintEnd_toEndOf="@+id/channelImg"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp"
        android:layout_marginEnd="@dimen/margin_5"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/channelNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenny Creation"
        style="@style/edit_text_style"
        android:textSize="@dimen/text_20"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        app:layout_constraintTop_toBottomOf="@id/channelImg"
        app:layout_constraintLeft_toLeftOf="@id/channelImg"
        app:layout_constraintRight_toRightOf="@id/channelImg"/>


