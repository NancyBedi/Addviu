<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.SearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:elevation="@dimen/margin_10"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/margin_45"
        android:background="@drawable/gradient_back"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/editSearch"
            style="@style/text_view_14_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_14"
            android:hint="Search"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/white"
            android:imeOptions="actionSearch"
            android:drawablePadding="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/filter"
            app:layout_constraintLeft_toRightOf="@+id/menuIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filter"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_filter"
            android:padding="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/menuIcon"
            app:layout_constraintBottom_toBottomOf="@id/menuIcon"
            android:layout_marginEnd="@dimen/margin_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/searched"
        android:paddingTop="@dimen/margin_10"
        android:paddingStart="@dimen/margin_5"
        android:paddingEnd="@dimen/margin_5"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_view_14_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/dark_gray"
        android:drawableTop="@drawable/ic_no_data"
        android:text="No Data Found Please try with some other keyword!!"/>

</androidx.constraintlayout.widget.ConstraintLayout>