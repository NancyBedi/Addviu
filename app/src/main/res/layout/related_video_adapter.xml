<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bannerImage"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/margin_10"
        android:layout_width="170dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading" />

    <TextView
        android:id="@+id/textTime"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/black_trans_99"
        android:layout_margin="@dimen/margin_5"
        app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
        app:layout_constraintEnd_toEndOf="@+id/bannerImage"
        style="@style/text_view_12_style"/>

    <TextView
        android:id="@+id/videoTitle"
        style="@style/text_view_14_style"
        android:maxLines="3"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/moreIcon"
        app:layout_constraintStart_toEndOf="@+id/bannerImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/channelName"
        style="@style/text_view_12_style"
        android:text="TextView"
        android:textColor="@color/purpule"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/videoTitle"
        app:layout_constraintStart_toStartOf="@+id/videoTitle"
        app:layout_constraintTop_toBottomOf="@+id/videoTitle" />

    <TextView
        android:id="@+id/textViews"
        style="@style/text_view_12_style"
        android:text="TextView"
        android:textColor="@color/dark_gray"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/channelName"
        app:layout_constraintStart_toStartOf="@+id/channelName"
        app:layout_constraintTop_toBottomOf="@id/channelName" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert_grey_24dp"
        android:layout_marginEnd="@dimen/margin_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_15"
        app:layout_constraintTop_toBottomOf="@+id/bannerImage"
        android:background="@color/l_d_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>